# Production Environment Configuration
# Copy this to .env and fill in your production values

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# Authentication (Replit Auth) - Production credentials
REPLIT_AUTH_URL=https://auth.replit.com
REPLIT_AUTH_CLIENT_ID=your_production_client_id
REPLIT_AUTH_CLIENT_SECRET=your_production_client_secret
REPLIT_AUTH_REDIRECT_URI=https://yourdomain.com/auth/callback

# Session Configuration
SESSION_SECRET=your-super-secure-production-session-secret-minimum-32-characters

# Payment Processing (Stripe) - Production keys
STRIPE_SECRET_KEY=sk_live_your_stripe_live_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_live_publishable_key

# First Atlantic Commerce (FAC) - Production mode
FAC_MERCHANT_ID=your_production_fac_merchant_id
FAC_POWERTRANZ_ID=your_production_powertranz_id
FAC_POWERTRANZ_PASSWORD=your_production_powertranz_password
FAC_ENVIRONMENT=production
FAC_API_VERSION=2.8



# Email Configuration (SMTP) - Production SMTP
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=your-production-email@yourdomain.com
SMTP_PASS=your-production-smtp-password

# File Upload Configuration
UPLOAD_DIR=uploads/
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Application Configuration
NODE_ENV=production
PORT=5000
BASE_URL=https://yourdomain.com

# Analytics Configuration
ANALYTICS_ENABLED=true

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com

# Security Configuration
LOG_LEVEL=info
DEBUG=false
